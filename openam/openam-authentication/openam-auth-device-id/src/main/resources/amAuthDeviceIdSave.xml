<!DOCTYPE ServicesConfiguration
        PUBLIC "=//iPlanet//Service Management Services (SMS) 1.0 DTD//EN"
        "jar://com/sun/identity/sm/sms.dtd">

<ServicesConfiguration>
    <Service name="iPlanetAMAuthDeviceIdSaveService" version="1.0">
        <Schema
                serviceHierarchy="/DSAMEConfig/authentication/iPlanetAMAuthDeviceIdSaveService"
                i18nFileName="amAuthDeviceIdSave"
                revisionNumber="1"
                i18nKey="iplanet-am-auth-device-id-save-service-description"
                resourceName="deviceidsave">

            <Organization>
                <AttributeSchema name="iplanet-am-auth-device-id-save-auth-level"
                                 type="single"
                                 syntax="number_range" rangeStart="0" rangeEnd="2147483647"
                                 i18nKey="a500"
                                 resourceName="authenticationLevel">
                    <DefaultValues>
                        <Value>0</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-device-id-save-auto-store-profile"
                                 type="single"
                                 syntax="boolean"
                                 i18nKey="a101"
                                 resourceName="autoStoreProfiles">
                    <BooleanValues>
                        <BooleanTrueValue i18nKey="i18nTrue">true</BooleanTrueValue>
                        <BooleanFalseValue i18nKey="i18nFalse">false</BooleanFalseValue>
                    </BooleanValues>
                    <DefaultValues>
                        <Value>false</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-device-id-save-max-profiles-allowed"
                                type="single" syntax="number_range" rangeStart="0" rangeEnd="2147483647"
                                i18nKey="a102" resourceName="maxProfilesAllowed">
                    <DefaultValues>
                        <Value>5</Value>
                    </DefaultValues>
                </AttributeSchema>

                <SubSchema name="serverconfig" inheritance="multiple" resourceName="USE-PARENT">
                    <AttributeSchema name="iplanet-am-auth-device-id-save-auth-level"
                                     type="single"
                                     syntax="number_range" rangeStart="0" rangeEnd="2147483647"
                                     i18nKey="a500"
                                     resourceName="authenticationLevel">
                        <DefaultValues>
                            <Value>0</Value>
                        </DefaultValues>
                    </AttributeSchema>
                    <AttributeSchema name="iplanet-am-auth-device-id-save-auto-store-profile"
                                     type="single"
                                     syntax="boolean"
                                     i18nKey="a101"
                                     resourceName="autoStoreProfiles">
                        <BooleanValues>
                            <BooleanTrueValue i18nKey="i18nTrue">true</BooleanTrueValue>
                            <BooleanFalseValue i18nKey="i18nFalse">false</BooleanFalseValue>
                        </BooleanValues>
                        <DefaultValues>
                            <Value>false</Value>
                        </DefaultValues>
                    </AttributeSchema>
                    <AttributeSchema name="iplanet-am-auth-device-id-save-max-profiles-allowed"
                                     type="single" syntax="number_range" rangeStart="0" rangeEnd="2147483647"
                                     i18nKey="a102" resourceName="maxProfilesAllowed">
                        <DefaultValues>
                            <Value>5</Value>
                        </DefaultValues>
                    </AttributeSchema>
                </SubSchema>
            </Organization>
        </Schema>
    </Service>
</ServicesConfiguration>

